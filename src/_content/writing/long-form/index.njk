<div class="banner banner--default">
  <h1>Posts</h1>
</div>

<section class="component component--standard-wide">
	<ul class="blog-list">
		{% for post in collections.blog|reverse %}
			<li>
				<h2 class="h4"><a href="{{ post.url }}">{{post.data.title}}</a></h2>
				<p><small>{{ post.data.summary }}</small></p>
			</li>
		{% endfor %}
	</ul>
</section>